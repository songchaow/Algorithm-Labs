{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build(release) ex1",
            "type": "shell",
            "command": "g++ ${file} -std=c++11 -O3 -o Lab1/ex1/source/a.exe",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "build(release) ex2",
            "type": "shell",
            "command": "g++ ${file} -std=c++11 -O3 -o Lab1/ex2/source/a.exe",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "linux build",
            "type": "shell",
            "command": "g++ ${file} -std=c++11 -ggdb -o Lab1/a.out",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}